{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Unit Tests in Debugger",
      "request": "launch",
      "runtimeArgs": ["run-script", "test"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Launch Integration Tests in Debugger",
      "request": "launch",
      "runtimeArgs": ["run-script", "test:integration"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ]
}
